# ===== PERGUNU PROJECT ENVIRONMENT TEMPLATE =====
# Copy file ini menjadi .env dan sesuaikan dengan konfigurasi Anda
# Environment Configuration Template untuk PERGUNU Teacher Organization Website

# === VITE CONFIGURATION ===
VITE_APP_NAME=PERGUNU
VITE_APP_VERSION=1.0.0
VITE_DEV_PORT=5173

# === API & BACKEND CONFIGURATION ===
VITE_API_BASE_URL=http://localhost:3001
VITE_FILE_SERVER_URL=http://localhost:3002
VITE_WEBHOOK_SERVER_URL=http://localhost:3003

# === EMAILJS CONFIGURATION ===
# Ganti dengan credentials EmailJS Anda
VITE_EMAILJS_SERVICE_ID=your_service_id
VITE_EMAILJS_TEMPLATE_ID=your_template_id
VITE_EMAILJS_PUBLIC_KEY=your_public_key

# === ADMIN CONFIGURATION ===
VITE_ADMIN_EMAIL=your_admin@email.com
VITE_ADMIN_USERNAME=admin
VITE_ADMIN_DEFAULT_PASSWORD=your_secure_password

# === SECURITY CONFIGURATION ===
VITE_BCRYPT_SALT_ROUNDS=12
VITE_SESSION_TIMEOUT=3600000
VITE_MAX_LOGIN_ATTEMPTS=5

# === APPLICATION CONFIGURATION ===
VITE_APP_DEBUG_MODE=true
VITE_DEMO_MODE=false
VITE_ENABLE_EMAIL_NOTIFICATIONS=true

# === DATABASE CONFIGURATION ===
VITE_USE_JSON_SERVER=true
VITE_JSON_SERVER_PORT=3001
VITE_JSON_SERVER_WATCH_FILE=db.json

# === GOOGLE FORMS INTEGRATION ===
VITE_GOOGLE_FORMS_WEBHOOK_URL=/api/webhook/google-forms
VITE_GOOGLE_FORMS_SECRET_KEY=your_webhook_secret_key

# === DEPLOYMENT CONFIGURATION ===
NODE_ENV=development
VITE_BUILD_TARGET=es2015
VITE_PUBLIC_PATH=/
